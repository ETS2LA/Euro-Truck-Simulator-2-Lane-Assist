<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia">

    <Style Selector="husk|GrowlItem">
        <Setter Property="Background" Value="{DynamicResource Gray2Color}"/>

        <Setter Property="BorderBrush" Value="{DynamicResource Gray6Color}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="14, 10"/>

        <Style Selector="^:success">
            <Setter Property="BorderBrush" Value="{DynamicResource Success6Color}"/>
            <Setter Property="Background" Value="{DynamicResource Success2Color}"/>
            <Setter Property="BorderThickness" Value="1 1 1 0"/>
        </Style>
        <Style Selector="^:warning">
            <Setter Property="BorderBrush" Value="{DynamicResource Warning6Color}"/>
            <Setter Property="Background" Value="{DynamicResource Warning2Color}"/>
            <Setter Property="BorderThickness" Value="1 1 1 0"/>
        </Style>
        <Style Selector="^:danger">
            <Setter Property="BorderBrush" Value="{DynamicResource Danger6Color}"/>
            <Setter Property="Background" Value="{DynamicResource Danger2Color}"/>
            <Setter Property="BorderThickness" Value="1 1 1 0"/>
        </Style>
    </Style>
</Styles>