<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             x:Class="ETS2LA.UI.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <FontFamily x:Key="Geist">avares://ETS2LA.UI/Assets/Fonts#Geist</FontFamily>
        
        <!-- 
        Adding to the brushes given by husk 
        Check here for a full list of available StaticResource colors with husk:
        https://github.com/d3ara1n/Huskui.Avalonia/blob/main/src/Huskui.Avalonia/Themes/Colors.axaml

        Quick rundown of husk colors (not brushes):
        - There are 12 shades, from 1 to 12.
        - There are 7 main colors: Black, White, Gray, Accent, Success, Warning, Danger.
        - The two most used colors are Gray (base) and Accent (highlight).
        - For the foreground use 11, for background use 3 or 4, borders or nonimportant highlights are usually 6 or 7.
        - Accessing colors is done via DynamicResource, brushes via StaticResource.
        -->
        <SolidColorBrush x:Key="ControlSecondaryLightForegroundBrush" Color="{DynamicResource Gray11Color}" />
        <SolidColorBrush x:Key="AccentForeground" Color="{DynamicResource Accent11Color}" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
        <husk:HuskuiTheme Corner="Normal" Accent="Orange" />

        <!-- Our style edits for normal avalonia elements are here -->
        <StyleInclude Source="avares://ETS2LA.UI/Styles/Span.axaml"/>
        <StyleInclude Source="avares://ETS2LA.UI/Styles/TextBlock.axaml"/>
        <StyleInclude Source="avares://ETS2LA.UI/Styles/Button.axaml"/>
        <StyleInclude Source="avares://ETS2LA.UI/Styles/Icon.axaml"/>
        <!-- and overrides to default husk styles here -->
        <StyleInclude Source="avares://ETS2LA.UI/Styles/Overrides/Overrides.axaml"/>
    
    </Application.Styles>
</Application>
