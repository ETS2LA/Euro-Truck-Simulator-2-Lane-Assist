<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             x:Class="ETS2LA.UI.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <FontFamily x:Key="GeistLight">avares://ETS2LA.UI/Assets/Fonts/Geist-Light.ttf#Geist Light</FontFamily>
        <FontFamily x:Key="Geist">avares://ETS2LA.UI/Assets/Fonts/Geist-Regular.ttf#Geist</FontFamily>
        <FontFamily x:Key="GeistMedium">avares://ETS2LA.UI/Assets/Fonts/Geist-Medium.ttf#Geist Medium</FontFamily>
        <FontFamily x:Key="GeistSemiBold">avares://ETS2LA.UI/Assets/Fonts/Geist-SemiBold.ttf#Geist SemiBold</FontFamily>
        <FontFamily x:Key="GeistBold">avares://ETS2LA.UI/Assets/Fonts/Geist-Bold.ttf#Geist Bold</FontFamily>
        
        <!-- Adding to the brushes given by husk -->
        <SolidColorBrush x:Key="ControlSecondaryLightForegroundBrush" Color="{DynamicResource Gray11Color}" />
    </Application.Resources>

    <Application.Styles>
        <FluentTheme/>
        <husk:HuskuiTheme Corner="Normal" />

        <!-- Global Font -->
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="GeistMedium"/>
        </Style>

        <!-- TextBlocks -->
        <Style Selector="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="TextBlock.Description">
            <Setter Property="Foreground" Value="{StaticResource ControlSecondaryLightForegroundBrush}"/>
        </Style>

        <!-- Sidebar Buttons -->
        <Style Selector="Button.sidebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#eeeeee"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10 5 10 5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="4 0 0 0"/>
        </Style>
        <Style Selector="Button.sidebar:hover">
            <Setter Property="Background" Value="#20232A"/>
            <Setter Property="BorderBrush" Value="#20232A"/>
        </Style>
        <Style Selector="Button.sidebar:pressed">
            <Setter Property="Background" Value="#2A2D34"/>
            <Setter Property="BorderBrush" Value="#2A2D34"/>
        </Style>
        <Style Selector="Button.sidebar.Selected">
            <Setter Property="Background" Value="#303030"/>
            <Setter Property="BorderBrush" Value="#303030"/>
        </Style>
        <Style Selector="Button.sidebar.Selected:hover">
            <Setter Property="Background" Value="#20232A"/>
            <Setter Property="BorderBrush" Value="#20232A"/>
        </Style>
        <Style Selector="Button.sidebar.Selected:pressed">
            <Setter Property="Background" Value="#2A2D34"/>
            <Setter Property="BorderBrush" Value="#2A2D34"/>
        </Style>

        <!-- Titlebar Buttons -->
        <Style Selector="Button.titlebar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextElement.Foreground" Value="#eeeeee"/>
        </Style>

        <Style Selector="Button.titlebar:pressed">
            <Setter Property="Background" Value="#20232A"/>
        </Style>

        <!-- Traffic-light buttons -->
        <Style Selector="Button.traffic">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#3A3D44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        <Style Selector="Button.traffic.red">
            <Setter Property="Background" Value="#FB2C36"/>
        </Style>
        <Style Selector="Button.traffic.yellow">
            <Setter Property="Background" Value="#F0B100"/>
        </Style>
        <Style Selector="Button.traffic.green">
            <Setter Property="Background" Value="#00C950"/>
        </Style>
    </Application.Styles>
</Application>
