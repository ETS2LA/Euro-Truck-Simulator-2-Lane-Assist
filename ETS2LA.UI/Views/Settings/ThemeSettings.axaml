<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ETS2LA.UI.Views.Settings"
             xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
             x:Class="ETS2LA.UI.Views.Settings.ThemeSettings"
             x:DataType="views:ThemeSettings">
    <Grid ColumnDefinitions="*,300,*">
        <StackPanel Grid.Column="1" Spacing="12">
            <TextBlock Text="Color Theme" />
            <ComboBox Name="ThemeCombobox" SelectedIndex="0" SelectionChanged="OnThemeChanged">
                <ComboBoxItem Content="System" />
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
            </ComboBox>
            <TextBlock Text="Accent Color" />
            <ComboBox Name="AccentColorCombobox" SelectedIndex="20" SelectionChanged="OnAccentColorChanged">
                <ComboBoxItem Content="System" />
                <ComboBoxItem Content="Neutral" />
                <ComboBoxItem Content="Tomato" />
                <ComboBoxItem Content="Red" />
                <ComboBoxItem Content="Ruby" />
                <ComboBoxItem Content="Crimson" />
                <ComboBoxItem Content="Pink" />
                <ComboBoxItem Content="Plum" />
                <ComboBoxItem Content="Purple" />
                <ComboBoxItem Content="Violet" />
                <ComboBoxItem Content="Iris" />
                <ComboBoxItem Content="Indigo" />
                <ComboBoxItem Content="Blue" />
                <ComboBoxItem Content="Cyan" />
                <ComboBoxItem Content="Teal" />
                <ComboBoxItem Content="Jade" />
                <ComboBoxItem Content="Green" />
                <ComboBoxItem Content="Grass" />
                <ComboBoxItem Content="Bronze" />
                <ComboBoxItem Content="Gold" />
                <ComboBoxItem Content="Orange" />
                <ComboBoxItem Content="Amber" />
                <ComboBoxItem Content="Yellow" />
                <ComboBoxItem Content="Lime" />
                <ComboBoxItem Content="Mint" />
                <ComboBoxItem Content="Sky" />
            </ComboBox>
        </StackPanel>
    </Grid>
</UserControl>