<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:ETS2LA.UI.Views.Settings"
             x:Class="ETS2LA.UI.Views.Settings.AudioSettings"
             x:DataType="views:AudioSettings">
    <Grid ColumnDefinitions="300,*">
        <StackPanel Grid.Column="0" Spacing="12" Margin="20">
            <StackPanel Orientation="Horizontal" Spacing="6">
                <TextBlock Text="Audio Volume" />
                <TextBlock Text="{Binding ElementName=VolumeSlider, Path=Value, StringFormat='{}{0:0}%'}" />
            </StackPanel>
            <Slider Name="VolumeSlider" Minimum="0" Maximum="100" ValueChanged="OnVolumeChanged" />
        </StackPanel>
    </Grid>
</UserControl>