<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ETS2LA.UI.MainWindow"
        Width="1280" Height="720"
        Background="Transparent"
        SystemDecorations="None"
        TransparencyLevelHint="Transparent">
    <Border Background="{DynamicResource PanelBackgroundBrush}" CornerRadius="{DynamicResource BorderRadius}">
        <DockPanel>
            <!-- Title bar -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="1 1 1 0"
                    CornerRadius="8 8 0 0"
                    Padding="4"
                    Margin="0 0 0 0"
                    DockPanel.Dock="Top"
                    PointerPressed="TitleBar_PointerPressed">
                <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="4 0 0 0" HorizontalAlignment="Left">
                        <TextBlock Text="ETS2LA" FontSize="12" FontWeight="Bold" Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="v0.4.1 - 67bfe5ee9" Foreground="{DynamicResource TextMutedBrush}" FontSize="11" VerticalAlignment="Center" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Margin="0 0 4 0" HorizontalAlignment="Right">
                        <Button Classes="traffic green" Click="OnMaxRestoreClick"/>
                        <Button Classes="traffic yellow"/>
                        <Button Classes="traffic red" Click="OnCloseClick"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid ColumnDefinitions="205,*" Margin="0 0 8 8">
                <!-- Sidebar -->
                <Border Grid.Column="0"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        Padding="0 16 0 16"
                        Margin="0 0 0 0">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <StackPanel Grid.Row="1" Spacing="14" Margin="2 0 0 0">
                            <StackPanel Spacing="0" Margin="12 0 12 0">
                                <TextBlock Text="Main" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" FontWeight="SemiBold" Margin="4 0 0 8"/>
                                <Button x:Name="DashboardButton" Classes="nav selected" Click="OnDashboardClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE80F;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Dashboard" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="VisualizationButton" Classes="nav" Click="OnVisualizationClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE21C;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Visualization" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Spacing="8" Margin="12 0 12 0">
                                <TextBlock Text="Plugins" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" FontWeight="SemiBold" Margin="4 0 0 8"/>
                                <Button x:Name="ManagerButton" Classes="nav" Click="OnManagerClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE14C;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Manager" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="CatalogueButton" Classes="nav" Click="OnCatalogueClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE179;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Catalogue" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="PerformanceButton" Classes="nav" Click="OnPerformanceClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE9D9;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Performance" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <StackPanel Spacing="8" Margin="12 0 12 0">
                                <TextBlock Text="Help" Foreground="{DynamicResource TextMutedBrush}" FontSize="12" FontWeight="SemiBold" Margin="4 0 0 8"/>
                                <Button x:Name="WikiButton" Classes="nav" Click="OnWikiClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xEC17;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Wiki" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="RoadmapButton" Classes="nav" Click="OnRoadmapClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE1C4;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Roadmap" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                                <Button x:Name="FeedbackButton" Classes="nav" Click="OnFeedbackClick">
                                    <StackPanel Orientation="Horizontal" Spacing="9">
                                        <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE939;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        <TextBlock Text="Feedback" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Spacing="12">
                            <Button x:Name="SettingsButton" Classes="nav" Click="OnSettingsClick">
                                <StackPanel Orientation="Horizontal" Spacing="9" Margin="12 0 12 0">
                                    <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE713;" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Settings" FontSize="13.5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content -->
                <Border Grid.Column="1"
                        Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="12 0 4 12"
                        Padding="20"
                        BorderBrush="#1F252C"
                        BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ContentControl x:Name="ContentHost"/>
                    </ScrollViewer>
                </Border>
            </Grid>
        </DockPanel>
    </Border>
</Window>
