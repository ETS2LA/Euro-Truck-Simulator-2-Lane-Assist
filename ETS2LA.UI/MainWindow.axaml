<husk:AppWindow xmlns="https://github.com/avaloniaui"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                x:Class="ETS2LA.UI.MainWindow"
                Width="1280" Height="720"
                SystemDecorations="Full"
                TransparencyLevelHint="Transparent">
    <Border>
        <DockPanel>
            <!-- Title bar -->
            <Border Padding="4"
                    DockPanel.Dock="Top"
                    PointerPressed="TitleBar_PointerPressed">
                <Grid ColumnDefinitions="Auto,*,Auto" VerticalAlignment="Center">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center" Margin="0 0 0 0" HorizontalAlignment="Left">
                        <Button Classes="titlebar" Click="TogglePane" Padding="6" Margin="0">
                            <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE700;" FontSize="11" VerticalAlignment="Center" Padding="0" Margin="0 1 0 0" />
                        </Button>
                        <TextBlock Text="ETS2LA" FontSize="13" FontWeight="Bold" VerticalAlignment="Center" Margin="0 1 0 0"/>
                        <TextBlock Text="v0.4.1 - 67bfe5ee9" Classes="Description" FontSize="11" VerticalAlignment="Center" Margin="0 1 0 0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="5" VerticalAlignment="Center" Margin="0 0 4 0" HorizontalAlignment="Right">
                        <Button Classes="traffic green" Click="OnMaxRestoreClick"/>
                        <Button Classes="traffic yellow"/>
                        <Button Classes="traffic red" Click="OnCloseClick"/>
                    </StackPanel>
                </Grid>
            </Border>

            <SplitView IsPaneOpen="True"
                       OpenPaneLength="200"
                       DisplayMode="Inline"
                       Name="MainSplitView"
                       Background="Transparent"
                       PaneBackground="Transparent">
                <!-- Sidebar -->
                <SplitView.Pane>
                    <ScrollViewer>
                        <Border Grid.Column="0"
                                Padding="0 16 4 12"
                                Margin="0 0 0 0">
                            <Grid RowDefinitions="Auto,*">
                                <StackPanel Grid.Row="0" Spacing="14" Margin="6 0 6 0">
                                    <StackPanel Spacing="0">
                                        <TextBlock Text="Main" FontSize="12" FontWeight="SemiBold" Margin="15 0 0 8" Classes="Description" TextWrapping="NoWrap" />
                                        <Button x:Name="DashboardButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnDashboardClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE80F;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Dashboard" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="VisualizationButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnVisualizationClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE21C;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Visualization" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel Spacing="0">
                                        <TextBlock Text="Plugins" FontSize="12" FontWeight="SemiBold" Margin="15 0 0 8" Classes="Description" TextWrapping="NoWrap" />
                                        <Button x:Name="ManagerButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnManagerClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE14C;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Manager" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="CatalogueButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnCatalogueClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE179;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Catalogue" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="PerformanceButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnPerformanceClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE9D9;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Performance" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>

                                    <StackPanel Spacing="0">
                                        <TextBlock Text="Help" FontSize="12" FontWeight="SemiBold" Margin="15 0 0 8" Classes="Description" TextWrapping="NoWrap" />
                                        <Button x:Name="WikiButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnWikiClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xEC17;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Wiki" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="RoadmapButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnRoadmapClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE1C4;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Roadmap" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                        <Button x:Name="FeedbackButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnFeedbackClick">
                                            <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                                <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE939;" FontSize="14" VerticalAlignment="Center" />
                                                <TextBlock Grid.Column="1" Text="Feedback" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                            </Grid>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Spacing="12" Margin="6 0 6 0" VerticalAlignment="Bottom">
                                    <Button x:Name="SettingsButton" Classes="sidebar" Theme="{StaticResource OutlineButtonTheme}" Click="OnSettingsClick">
                                        <Grid ColumnDefinitions="22,*,Auto" VerticalAlignment="Center">
                                            <TextBlock Grid.Column="0" FontFamily="Segoe Fluent Icons" Text="&#xE713;" FontSize="14" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" Text="Settings" FontSize="14" Margin="0 0 0 2" FontWeight="600" TextWrapping="NoWrap" />
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </ScrollViewer>
                </SplitView.Pane>

                <!-- Content -->
                <husk:Card CornerRadius="12 0 0 0"
                           BorderThickness="1"
                           Padding="0"
                           Name="ContentBorder">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ContentControl x:Name="ContentHost"/>
                    </ScrollViewer>
                </husk:Card>
            </SplitView>
        </DockPanel>
    </Border>
</husk:AppWindow>
