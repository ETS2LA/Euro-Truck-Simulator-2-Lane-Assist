<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia">
    <Style Selector="husk|GrowlItem">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Gray6Color}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="14, 10"/>

        <Style Selector="^.success">
            <Setter Property="BorderBrush" Value="{DynamicResource Green6Color}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        </Style>
        <Style Selector="^.warning">
            <Setter Property="BorderBrush" Value="{DynamicResource Yellow6Color}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        </Style>
        <Style Selector="^.danger">
            <Setter Property="BorderBrush" Value="{DynamicResource Red6Color}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        </Style>
    </Style>
</Styles>