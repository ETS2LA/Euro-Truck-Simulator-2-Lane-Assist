<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <!-- Core color tokens -->
    <SolidColorBrush x:Key="Color.Background" Color="#0F1115"/>
    <SolidColorBrush x:Key="Color.Surface" Color="#16181D"/>
    <SolidColorBrush x:Key="Color.SurfaceAlt" Color="#1A1C21"/>
    <SolidColorBrush x:Key="Color.Card" Color="#161C24"/>
    <SolidColorBrush x:Key="Color.CardBorder" Color="#242A33"/>
    <SolidColorBrush x:Key="Color.Accent" Color="#2D7DFF"/>
    <SolidColorBrush x:Key="Color.AccentMuted" Color="#2A2F37"/>
    <SolidColorBrush x:Key="Color.TextPrimary" Color="#ECEDEE"/>
    <SolidColorBrush x:Key="Color.TextSecondary" Color="#C4C6CC"/>
    <SolidColorBrush x:Key="Color.TextMuted" Color="#8A8D94"/>

    <!-- Radii & spacing -->
    <CornerRadius x:Key="Radius.Sm">6</CornerRadius>
    <CornerRadius x:Key="Radius.Md">10</CornerRadius>
    <CornerRadius x:Key="Radius.Lg">14</CornerRadius>
    <Thickness x:Key="Space.Xs">4</Thickness>
    <Thickness x:Key="Space.Sm">8</Thickness>
    <Thickness x:Key="Space.Md">12</Thickness>
    <Thickness x:Key="Space.Lg">16</Thickness>
    <Thickness x:Key="Space.Xl">20</Thickness>
  </Styles.Resources>
</Styles>
