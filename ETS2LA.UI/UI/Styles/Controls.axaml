<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Text helpers -->
  <Style Selector="TextBlock.title">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource Color.TextPrimary}"/>
  </Style>
  <Style Selector="TextBlock.subtitle">
    <Setter Property="FontSize" Value="13.5"/>
    <Setter Property="Foreground" Value="{StaticResource Color.TextSecondary}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>
  <Style Selector="TextBlock.label">
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource Color.TextPrimary}"/>
  </Style>
  <Style Selector="TextBlock.muted">
    <Setter Property="Foreground" Value="{StaticResource Color.TextMuted}"/>
  </Style>

  <!-- Card surface -->
  <Style Selector="Border.card">
    <Setter Property="Background" Value="{StaticResource Color.Card}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Color.CardBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource Radius.Lg}"/>
    <Setter Property="Padding" Value="12"/>
  </Style>

  <!-- Buttons -->
  <Style Selector="Button.primary-button">
    <Setter Property="Background" Value="{StaticResource Color.Accent}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="BorderBrush" Value="{StaticResource Color.Accent}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource Radius.Sm}"/>
    <Setter Property="Padding" Value="12 8"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>
  <Style Selector="Button.ghost-button">
    <Setter Property="Background" Value="{StaticResource Color.AccentMuted}"/>
    <Setter Property="Foreground" Value="{StaticResource Color.TextPrimary}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Color.CardBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource Radius.Sm}"/>
    <Setter Property="Padding" Value="12 8"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <!-- Toggle -->
  <Style Selector="ToggleSwitch.primary-toggle">
    <Setter Property="HorizontalAlignment" Value="Left"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Width" Value="48"/>
    <Setter Property="Height" Value="26"/>
  </Style>

  <!-- Section header pill -->
  <Style Selector="Border.section">
    <Setter Property="Background" Value="{StaticResource Color.SurfaceAlt}"/>
    <Setter Property="BorderBrush" Value="{StaticResource Color.CardBorder}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="{StaticResource Radius.Md}"/>
    <Setter Property="Padding" Value="12"/>
  </Style>
</Styles>
